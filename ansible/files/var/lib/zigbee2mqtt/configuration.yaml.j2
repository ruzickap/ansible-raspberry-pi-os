advanced:
  transmit_power: 20
  log_output:
    - console

devices:
  '0xa4c138bc7ea071c3':
    friendly_name: Tuya WSD500A PetrR (0xa4c138bc7ea071c3)
    description: >-
      Temperature & humidity sensor which exposes battery, temperature,
      humidity, voltage, linkquality
  '0x58e45b83342d585a':
    friendly_name: Qingping CGDK2 PetrR (0x58e45b83342d585a)
    description: Temp & RH Monitor Lite (pvxx/ZigbeeTLc)
  '0x881a14fffe95bb7c':
    friendly_name: IKEA LED2201G8 PetrR (0x881a14fffe95bb7c)
    description: TRADFRI bulb E26/27, white spectrum, globe, opal, 1055/1100 lm

frontend:
  url: 'https://zigbee2mqtt-rpi.xvx.cz'

# Home Assistant integration (MQTT discovery)
homeassistant: true

# MQTT settings
mqtt:
  # MQTT base topic for zigbee2mqtt MQTT messages
  base_topic: zigbee2mqtt
  # MQTT server URL
  server: 'mqtt://{{ ansible_default_ipv4.address }}:1883'
  # MQTT server authentication, uncomment if required:
  user: {{ mqtt_clients.zigbee2mqtt.user }}
  password: {{ mqtt_clients.zigbee2mqtt.password }}
  # version: 5

serial:
  port: tcp://{{ zigbee_coordinator_ip }}:6638
  baudrate: 115200
