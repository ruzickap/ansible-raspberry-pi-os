substitutions:
  name: apollo-msr-2-f585f4
  friendly_name: Apollo MSR-2 f585f4

# keep-sorted start newline_separated=yes
# https://esphome.io/components/api.html
api:
  id: component_api
  encryption:
    key: !secret api_password

# https://esphome.io/components/esphome.html
esphome:
  name: ${name}
  name_add_mac_suffix: false
  friendly_name: ${friendly_name}
  area: Hall

# https://esphome.io/components/logger.html
logger:
  id: component_logger
  baud_rate: 0

# https://esphome.io/components/ota.html
ota:
  - id: !extend ota_default
    password: !secret ota_password

# https://esphome.io/components/packages.html
packages:
  ApolloAutomation.MSR-2: github://ApolloAutomation/MSR-2/Integrations/ESPHome/MSR-2.yaml

# https://esphome.io/components/prometheus.html
prometheus:
  id: component_prometheus

# https://esphome.io/components/web_server.html
web_server:
  id: component_web_server
  version: 3
  auth:
    username: !secret web_server_username
    password: !secret web_server_password

# https://esphome.io/components/wifi.html
wifi:
  id: component_wifi
  ssid: !secret wifi_ssid
  password: !secret wifi_password
# keep-sorted end
