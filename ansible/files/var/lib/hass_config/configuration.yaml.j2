#################################################
# Core config
#################################################

homeassistant:
  name: Home, Sweet Home...
  latitude: {{ hass_latitude }}
  longitude: {{ hass_longitude}}
  elevation: {{ hass_elevation}}
  currency: CZK
  country: CZ
  time_zone: {{ timezone }}
  external_url: {{ hass_url }}

#################################################
# Features
#################################################

automation: !include automations.yaml

default_config:

device_tracker:
  - platform: luci
    host: {{ openwrt_ip }}
    username: !secret openwrt_luci_username
    password: !secret openwrt_luci_password
    verify_ssl: false

http:
  use_x_forwarded_for: true
  trusted_proxies:
    - 127.0.0.1
    - ::1
    - {{ ansible_default_ipv4.address }}

logger:
  default: warn
  filters:
    homeassistant.loader:
      - "We found a custom integration .* which has not been tested by Home Assistant.*"
    py.warnings:
      - "InsecureRequestWarning: Unverified HTTPS request is being made to host.*"

# mqtt:
#   broker: 127.0.0.1
#   port: 1883
#   username: {{ mqtt_clients.homeassistant.user }}
#   password: {{ mqtt_clients.homeassistant.password }}

notify:
  - name: notify_smtp_gmail
    encryption: starttls
    password: !secret smtp_gmail_auth_password
    platform: smtp
    port: 587
    recipient: !secret smtp_recipient
    sender_name: Home Assistant
    sender: !secret smtp_gmail_auth_user
    server: smtp.gmail.com
    timeout: 15
    username: !secret smtp_gmail_auth_user

panel_iframe:
  esphome:
    title: ESPHome
    icon: mdi:chip
    url: https://esphome-rpi.xvx.cz
    require_admin: true
  grafana:
    title: Grafana
    icon: mdi:chart-timeline
    url: {{ grafana_url }}
    require_admin: true
  prometheus:
    title: Prometheus
    icon: mdi:chart-pie
    url: {{ prometheus_web_external_url }}
    require_admin: true
  uzg_01:
    title: UZG-01
    url: https://uzg-01.xvx.cz
    icon: mdi:zigbee
    require_admin: true
  msr-2:
    title: Apollo MSR-2
    url: http://192.168.1.3
    icon: mdi:motion-sensor
    require_admin: true
  zigbee2mqtt:
    title: Zigbee2Mqtt
    url: https://zigbee2mqtt-rpi.xvx.cz
    icon: mdi:graphql
    require_admin: true

recorder:
  purge_keep_days: 7
