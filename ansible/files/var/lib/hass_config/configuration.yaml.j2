# Loads default set of integrations. Do not remove.
default_config:

# Text to speech
tts:
  - platform: google_translate

homeassistant:
  external_url: {{ hass_url }}
  internal_url: {{ hass_url }}
  latitude: 49.2078594
  longitude: 16.5492591
  name: Home
  time_zone: {{ timezone }}
  unit_system: metric

http:
  use_x_forwarded_for: true
  trusted_proxies:
    - 127.0.0.1
    - ::1
{% for ip_address in ansible_facts.all_ipv4_addresses %}
    - {{ ip_address }}
{% endfor %}

prometheus:
