---
# For configuration options and examples, please see:
# https://gethomepage.dev/latest/configs/service-widgets

- resources:
    cpu: true
    cputemp: true
    memory: true
    uptime: true

- resources:
    expanded: true
    disk:
      - /
      - /mnt/usb/music

- greeting:
    text_size: xl
    text: {{ inventory_hostname }} | {{ ansible_default_ipv4.address }}

- logo:
    icon: raspberrypi.svg
