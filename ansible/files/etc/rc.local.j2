#!/bin/sh -e
#
# rc.local
#
# This script is executed at the end of each multiuser runlevel.
# Make sure that the script will "exit 0" on success or any other
# value on error.
#
# In order to enable or disable this script just change the execution
# bits.
#
# By default this script does nothing.

# Print the IP address
_IP=$(hostname -I) || true
if [ "$_IP" ]; then
  printf "My IP address is %s\n" "$_IP"
fi

(
while ! nmcli networking connectivity check | grep -q "full"; do
  sleep 5
done

cat << EOF | mailx -a "Content-Type: text/html" -s "Reboot {{ ansible_fqdn }}" "{{ notification_email }}"
<html>
<body>
    <h4>ðŸ”„ {{ ansible_fqdn }} rebooted: $(date)</h4>
    <summary>ðŸ“‹ 5min before boot logs:</summary>
    <pre>
$(journalctl -b -1 --since "-5min")
    </pre>
    </details>
</body>
</html>
EOF
) &

exit 0
